{
  "name": "cogfusion-ai-server",
  "version": "1.0.0",
  "description": "Backend server for Cogfusion.ai chatbot",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build": "npm run test:pre-deploy && echo 'Server build completed'",
    "postinstall": "echo 'Post-install complete'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:pre-commit": "jest --passWithNoTests --silent",
    "test:pre-deploy": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":75,\"functions\":75,\"lines\":75,\"statements\":75}}'",
    "lint": "echo 'No linter configured yet'"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "openai": "^4.20.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.0.2",
    "nodemon": "^3.0.3",
    "supertest": "^7.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
